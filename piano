import React, { useState } from 'react';
import { Header } from './components/Header';
import { StepIndicator } from './components/StepIndicator';
import { Button } from './components/Button';
import { AppStep, UploadedPiano } from './types';
import { CONTACT_URL } from './constants';
import { generatePianoInRoom } from './services/geminiService';

const App: React.FC = () => {
  const [step, setStep] = useState<AppStep>(AppStep.UPLOAD_ROOM);
  const [roomImage, setRoomImage] = useState<string | null>(null);
  
  // New state for Step 2
  const [pianoImage, setPianoImage] = useState<string | null>(null);
  const [pianoName, setPianoName] = useState<string>("");
  
  const [resultImage, setResultImage] = useState<string | null>(null);
  const [isGenerating, setIsGenerating] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // Handle Room File Upload
  const handleRoomUpload = (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (file) {
      const reader = new FileReader();
      reader.onloadend = () => {
        setRoomImage(reader.result as string);
        setError(null);
      };
      reader.readAsDataURL(file);
    }
  };

  // Handle Piano File Upload
  const handlePianoUpload = (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (file) {
      const reader = new FileReader();
      reader.onloadend = () => {
        setPianoImage(reader.result as string);
        setError(null);
      };
      reader.readAsDataURL(file);
    }
  };

  const confirmRoom = () => {
    if (roomImage) setStep(AppStep.UPLOAD_PIANO);
  };

  const startGeneration = async () => {
    if (!roomImage || !pianoImage) return;

    setIsGenerating(true);
    setStep(AppStep.PROCESSING);
    setError(null);

    try {
      // Use the uploaded piano image base64 directly
      const result = await generatePianoInRoom(
        roomImage,
        pianoImage,
        pianoName || "Vleugel of Piano" // Default fallback
      );
      setResultImage(result);
      setStep(AppStep.RESULT);
    } catch (err) {
      console.error(err);
      setError("Er is iets misgegaan bij het genereren. Probeer het opnieuw.");
      setStep(AppStep.UPLOAD_PIANO);
    } finally {
      setIsGenerating(false);
    }
  };

  const reset = () => {
    setStep(AppStep.UPLOAD_ROOM);
    setRoomImage(null);
    setPianoImage(null);
    setPianoName("");
    setResultImage(null);
  };

  return (
    <div className="min-h-screen flex flex-col bg-white font-sans text-gray-800">
      <Header />
      
      <main className="flex-grow flex flex-col items-center max-w-5xl mx-auto w-full px-4 pb-12">
        <StepIndicator currentStep={step === AppStep.PROCESSING ? AppStep.RESULT : step} />

        <div className="w-full max-w-4xl mx-auto transition-all duration-500">
          
          {/* STEP 1: UPLOAD ROOM */}
          {step === AppStep.UPLOAD_ROOM && (
            <div className="flex flex-col items-center animate-fade-in">
              <div className="text-center mb-10">
                <h2 className="text-4xl font-serif font-bold text-black mb-4">Uw ruimte</h2>
                <p className="text-gray-500 max-w-lg mx-auto">
                  Upload een foto van uw woonkamer of studio. Zorg voor helder licht en voldoende ruimte voor het instrument.
                </p>
              </div>

              <div className="w-full max-w-2xl bg-gray-50 p-8 border border-gray-200 rounded-sm">
                {!roomImage ? (
                  <label className="flex flex-col items-center justify-center w-full h-80 border-2 border-gray-300 border-dashed cursor-pointer bg-white hover:bg-gray-50 hover:border-black transition-colors">
                    <div className="flex flex-col items-center justify-center pt-5 pb-6">
                      <svg className="w-12 h-12 mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                      <p className="mb-2 text-lg text-gray-900 font-serif">Klik om te uploaden</p>
                      <p className="text-xs text-gray-500 uppercase tracking-wide">JPG of PNG (Max 5MB)</p>
                    </div>
                    <input type="file" className="hidden" accept="image/*" onChange={handleRoomUpload} />
                  </label>
                ) : (
                  <div className="relative group shadow-lg">
                    <img src={roomImage} alt="Room Preview" className="w-full h-80 object-cover" />
                    <button 
                      onClick={() => setRoomImage(null)}
                      className="absolute top-4 right-4 bg-white text-black p-3 shadow-lg hover:bg-black hover:text-white transition-colors"
                    >
                      <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                    </button>
                  </div>
                )}

                {roomImage && (
                  <div className="mt-8 flex justify-center">
                    <Button onClick={confirmRoom}>
                      Kies een Piano &rarr;
                    </Button>
                  </div>
                )}
              </div>
            </div>
          )}

          {/* STEP 2: UPLOAD PIANO */}
          {step === AppStep.UPLOAD_PIANO && (
            <div className="flex flex-col items-center animate-fade-in">
              <div className="text-center mb-8">
                 <h2 className="text-4xl font-serif font-bold text-black mb-4">Het Instrument</h2>
                 <p className="text-gray-500 max-w-lg mx-auto mb-2">
                   Ga naar <a href="https://www.schumer.nl/pianos/" target="_blank" className="text-[#bb0715] underline hover:text-black transition-colors">schumer.nl</a>, sla een afbeelding van een piano op, en upload deze hieronder.
                 </p>
              </div>

              {error && (
                <div className="w-full max-w-2xl bg-red-50 text-red-800 p-4 mb-6 text-sm border-l-4 border-red-800">
                  {error}
                </div>
              )}

              <div className="w-full max-w-2xl bg-gray-50 p-8 border border-gray-200 rounded-sm">
                <div className="flex flex-col gap-6">
                    {/* Upload Area */}
                    {!pianoImage ? (
                      <label className="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed cursor-pointer bg-white hover:bg-gray-50 hover:border-[#bb0715] transition-colors">
                        <div className="flex flex-col items-center justify-center pt-5 pb-6">
                          <svg className="w-10 h-10 mb-3 text-[#bb0715]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                          <p className="mb-1 text-gray-900 font-medium">Upload Piano Afbeelding</p>
                          <p className="text-xs text-gray-400">Van Schumer.nl</p>
                        </div>
                        <input type="file" className="hidden" accept="image/*" onChange={handlePianoUpload} />
                      </label>
                    ) : (
                      <div className="relative group border border-gray-200">
                         <div className="h-64 w-full bg-white flex items-center justify-center overflow-hidden">
                            <img src={pianoImage} alt="Gekozen Piano" className="max-h-full object-contain" />
                         </div>
                         <button 
                          onClick={() => setPianoImage(null)}
                          className="absolute top-2 right-2 bg-white/90 text-black p-2 hover:bg-black hover:text-white transition-colors shadow-sm"
                        >
                          <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </button>
                      </div>
                    )}

                    {/* Piano Details Input */}
                    <div>
                        <label className="block text-sm font-bold uppercase tracking-wider text-gray-700 mb-2">
                            Naam / Model (Optioneel)
                        </label>
                        <input 
                            type="text" 
                            value={pianoName}
                            onChange={(e) => setPianoName(e.target.value)}
                            placeholder="Bijv. Yamaha U1 of Kawai GL-10"
                            className="w-full p-3 border border-gray-300 focus:border-black focus:ring-0 outline-none transition-colors"
                        />
                        <p className="text-xs text-gray-400 mt-1">Dit helpt de AI om het model correct te plaatsen.</p>
                    </div>
                </div>

                <div className="mt-8 flex justify-between items-center pt-6 border-t border-gray-200">
                   <button onClick={() => setStep(AppStep.UPLOAD_ROOM)} className="text-sm text-gray-500 hover:text-black underline">
                     &larr; Terug naar kamer
                   </button>
                   <Button 
                    onClick={startGeneration} 
                    disabled={!pianoImage}
                   >
                    Genereer Visualisatie
                  </Button>
                </div>
              </div>
            </div>
          )}

          {/* STEP 3: PROCESSING */}
          {step === AppStep.PROCESSING && (
             <div className="flex flex-col items-center justify-center h-[500px] space-y-8 animate-pulse">
               <div className="relative">
                  <div className="w-24 h-24 border-t-2 border-b-2 border-[#bb0715] rounded-full animate-spin"></div>
                  <div className="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 font-serif text-2xl font-bold">S</div>
               </div>
               <div className="text-center">
                 <h3 className="text-2xl font-serif font-bold text-black">Moment geduld...</h3>
                 <p className="text-gray-500 mt-2 font-light">De AI projecteert het instrument in uw ruimte.</p>
               </div>
             </div>
          )}

          {/* STEP 4: RESULT */}
          {step === AppStep.RESULT && resultImage && (
            <div className="flex flex-col animate-fade-in bg-white shadow-2xl">
              <div className="relative w-full bg-gray-100">
                <img src={resultImage} alt="Resultaat" className="w-full h-auto max-h-[70vh] object-contain mx-auto" />
                <div className="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-8">
                   <h3 className="text-white font-serif text-xl">{pianoName || "Uw Visualisatie"}</h3>
                </div>
              </div>

              <div className="p-10 flex flex-col items-center text-center bg-white">
                <h2 className="text-3xl font-serif font-bold text-black mb-4">Is dit uw droompiano?</h2>
                <p className="text-gray-600 max-w-xl mb-10 leading-relaxed">
                  U kijkt naar een impressie van de <strong>{pianoName || "piano"}</strong> in uw eigen interieur. 
                  Schumer helpt u graag verder met persoonlijk advies of een afspraak in de showroom.
                </p>

                <div className="flex flex-col sm:flex-row gap-5 w-full max-w-lg">
                   <Button 
                     variant="secondary" 
                     className="w-full flex-1"
                     onClick={() => window.open(CONTACT_URL, '_blank')}
                   >
                     Neem Contact Op
                   </Button>
                   <Button 
                     variant="outline" 
                     className="w-full flex-1"
                     onClick={reset}
                   >
                     Nieuwe Configuraties
                   </Button>
                </div>
              </div>
            </div>
          )}

        </div>
      </main>
      
      <footer className="bg-black text-white py-12">
         <div className="max-w-5xl mx-auto px-4 text-center">
            <h4 className="text-2xl font-serif font-bold mb-4">SCHUMER</h4>
            <p className="text-gray-400 text-sm mb-8">Pianos & Vleugels sinds 1923</p>
            <div className="text-xs text-gray-600 border-t border-gray-800 pt-6">
              &copy; {new Date().getFullYear()} Schumer.nl - Powered by Gemini AI
            </div>
         </div>
      </footer>

      <style>{`
        @keyframes fadeIn {
          from { opacity: 0; transform: translateY(20px); }
          to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
          animation: fadeIn 0.6s ease-out forwards;
        }
      `}</style>
    </div>
  );
};

export default App;
